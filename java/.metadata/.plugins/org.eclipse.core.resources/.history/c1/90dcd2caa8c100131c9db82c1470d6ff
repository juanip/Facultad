package clase3;

public class Ejercicio2 {
	
	private String[] palabras = new String[5];

	public void setPalabras(){
		carga();
	}
	
	public String[] getPalabras(){
		return this.palabras;
	}
	
	private void carga(){
		this.palabras[0] = "hola";
		this.palabras[1] = "como";
		this.palabras[2] = "va";
		this.palabras[3] = "bien";
		this.palabras[4] = "vos";
	}
	
	public String getOracion(String separador){
		StringBuffer oracion = new StringBuffer();
		for(int i=0;i<palabras.length;i++){
			oracion.append(palabras[i]);
			oracion.append(separador);
			
		}
	}
}
