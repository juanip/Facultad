package clase3;

public class Ejercicio1 {
	private int[] numeros = new int[10];
	
	public void setArray(){
		carga();
	}
	
	public int[] getArray(){
		return this.numeros;
	}
	
	private void carga(){
		for(int i=0;i<10;i++){
			if(15+(i*3)%2==0){
				numeros[i] = (15+(i*3))/2;		
			}
			else{
				numeros[i] = 15+(i*3);
			}
		}
	}
	
	public int getSumatoria(){
		int sumatoria = 0;
		for(int i=0;i<10;i++){
			sumatoria =+ numeros[i];
		}
		return sumatoria;
	}
	
	public float getPromedio(){
		return getSumatoria() / 2;
	}
	
	public int[] getMenores(){
		int indice = 0;
		int[] menores;
		
		for(int i=0;i<10;i++){
			indice =+ this.numeros[i] < getPromedio() ? 1 : 0;
		}
		
		menores = new int[3];
		
		for(int i=0, j=0;i<10;i++){
			if(numeros[i]<getPromedio()){
				menores[j] = numeros[i];
				j++;
			}
		}
		
		return menores;
	}
}
