package clase3;

public class Main {

	public static void main(String[] args) {

		Ejercicio1 ej1 = new Ejercicio1();
		int[] menores;
		
		ej1.setArray();
		
		System.out.print("Sumatoria: ");
		System.out.println(ej1.getSumatoria());
		
		System.out.print("Promedio: ");
		System.out.println(ej1.getPromedio());
		
		menores = ej1.getMenores();
		
		System.out.print("Menores al promedio:");
		
		for(int i=0;i<menores.length;i++){
			System.out.println(menores[i]);
		}
	}

}
