package clase3;

public class Main {

	public static void main(String[] args) {

		Ejercicio1 ej1 = new Ejercicio1();
		int[] menores;
		
		ej1.setArray();
		
		System.out.println("Sumatoria: ");
		System.out.print(ej1.getSumatoria());
		
		System.out.println("Promedio: ");
		System.out.print(ej1.getPromedio());
		
		menores = ej1.getMenores();
		System.out.println("Menores al promedio:");
		for(int i=0;i<ej1.getMenores().length;i++){
			System.out.println(ej1.getMenores()[i]);
		}
	}

}
