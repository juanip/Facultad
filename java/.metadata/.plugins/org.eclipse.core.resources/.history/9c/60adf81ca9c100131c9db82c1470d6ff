package clase3;

public class Main {

	public static void main(String[] args) {

		//EJERCICIO 1
		Ejercicio1 ej1 = new Ejercicio1();
		int[] menores;
		
		ej1.setArray();
		
		System.out.println("Ejercicio 1 \n");
		
		System.out.print("Sumatoria: ");
		System.out.println(ej1.getSumatoria());
		
		System.out.print("Promedio: ");
		System.out.println(ej1.getPromedio());
		
		menores = ej1.getMenores();
		
		System.out.println("Menores al promedio:");
		
		for(int i=0;i<menores.length;i++){
			System.out.println(menores[i]);
		}
		
		
		//EJERCICIO 2
		Ejercicio2 ej2 = new Ejercicio2();
		ej2.setPalabras();
		
		System.out.println(ej2.getOracion("/"));
	}

}
